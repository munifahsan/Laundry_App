<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMain.MainActivity">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bnb_tab"
        android:background="@color/abuabu2"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnb_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/abuabu1"
        app:elevation="0dp"
        app:itemIconSize="24dp"
        app:itemIconTint="@drawable/state_bnve"
        app:itemTextColor="@drawable/state_bnve"
        app:menu="@menu/navigation" />

</RelativeLayout>